@using SistemaDePlanillas.Models.ViewModels
@model LoginViewModel
@{
    ViewBag.Title = "Inicio de Sesión";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Iniciar Sesión</h3>
            </div>
            <div class="panel-body">
                <form action="/Account/Signin" method="post">
                    @Html.AntiForgeryToken()
                    <div class="input-group"> 
                        <span class="input-group-addon">Nombre de usuario</span>
                        <input class="form-control" type="text" name="username" placeholder="Usuario" value="JonnCh"/>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">Contraseña</span>
                        <input class="form-control" type="password" name="password" placeholder="********" value="123" />
                    </div>
                    <input class="btn btn-primary" type="submit" value="Ingresar"/>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>
