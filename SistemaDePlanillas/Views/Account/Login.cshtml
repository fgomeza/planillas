@using SistemaDePlanillas.Models.ViewModels
@model LoginViewModel
@{
    ViewBag.Title = "Inicio de Sesión";
    ViewBag.Error = Html.ValidationMessage("LoginError");
}

<div>
    <h3>@ViewBag.Message</h3>
</div>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Iniciar Sesión</h3>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <fieldset class="form-group">
                        @Html.LabelFor(u => u.Username)
                        <div class="input-group">
                            <!--<input class="form-control" type="text" name="Username" value="JonnCh" />-->
                            @Html.TextBoxFor(u => u.Username, new { @class = "form-control", @Value = "JonnCh" })
                            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        </div>
                        <small class="text-danger">@Html.ValidationMessage("Username")</small>
                    </fieldset>

                    <fieldset class="form-group">
                        <label for="password">Contraseña</label>
                        @Html.LabelFor(u => u.Password)
                        <div class="input-group">
                            @Html.PasswordFor(u => u.Password, new { @class = "form-control", @Value = "123" })
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                        </div>
                        <small class="text-danger">@Html.ValidationMessage("Password")</small>
                    </fieldset>

                    <div class="checkbox">
                        <label>@Html.CheckBox("RememberMe")Recordar usuario</label>
                    </div>

                    <input class="btn btn-primary" type="submit" value="Ingresar" />
                }

            </div>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>
