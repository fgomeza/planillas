@using SistemaDePlanillas.Models.ViewModels
@model LoginViewModel
@{
    ViewBag.Title = "Inicio de Sesión";
}

<div>
    <h3>@ViewBag.Message</h3>
</div>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Iniciar Sesión</h3>
            </div>
            <div class="panel-body">

                <form action="/Account/Signin" method="post">
                    @Html.AntiForgeryToken()

                    <fieldset class="form-group">
                        <label for="username">Usuario</label>
                        <div class="input-group">
                            <input class="form-control" type="text" name="username" value="JonnCh" />
                            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        </div>
                        <small class="text-danger">@Html.ValidationMessage("username")</small>
                    </fieldset>
                                                                
                    <fieldset class="form-group">
                        <label for="password">Contraseña</label>
                        <div class="input-group">
                            <input class="form-control" type="password" name="password" value="123" />
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                        </div>
                        <small class="text-danger">@Html.ValidationMessage("password")</small>
                    </fieldset>
                    

                    <input class="btn btn-primary" type="submit" value="Ingresar"/>
                </form>

            </div>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>
