@using SistemaDePlanillas.Models.ViewModels
@model LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Inicio de Sesión";
    ViewBag.Error = Html.ValidationMessage("LoginError");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewBag.Title</title>

    <!-- JQuery -->
    <script src="~/Scripts/jquery-2.2.1.js"></script>

    <!-- Twitter Bootstrap -->
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <script src="~/Scripts/bootstrap.js"></script>

    <!-- Jasny Bootstrap -->
    <link rel="stylesheet" href="~/Content/jasny-bootstrap.css" />
    <script src="~/Scripts/jasny-bootstrap.js"></script>

    <!-- Microsoft JQuery Unobtrusive Validation -->
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <!-- Site -->
    <script src="~/Scripts/site.js"></script>
    <link rel="stylesheet" href="~/Content/site.css" />
    <link rel="stylesheet" href="~/Content/sidebar.css" />
</head>

<body class="page-login">

    <div class="body-content">

        <div class="container-fluid">

            <div class="alert alert-danger alert-dismissible fade in" style="display: none;">
                <button type="button" class="close" data-dismiss="alert" aria-label="close">&times;</button>
                <strong>@ViewBag.Error</strong>
            </div>

            <main>
                <div>
                    <h3>@ViewBag.Message</h3>
                </div>
                <div class="row">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Iniciar Sesión</h3>
                            </div>
                            <div class="panel-body">

                                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-vertical", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-group">
                                        @Html.LabelFor(u => u.Username, new { @class = "control-label" })
                                        <div class="input-group">
                                            @Html.TextBoxFor(u => u.Username, new { @class = "form-control", @Value = "JonnCh" })
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                        </div>
                                        @Html.ValidationMessageFor(u => u.Username, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(u => u.Password, new { @class = "control-label" })
                                        <div class="input-group">
                                            @Html.PasswordFor(u => u.Password, new { @class = "form-control", @Value = "123" })
                                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                                        </div>
                                        @Html.ValidationMessageFor(u => u.Password, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        @Html.CheckBoxFor(u => u.RememberMe)
                                        @Html.LabelFor(u => u.RememberMe, new { @class = "control-label" })
                                    </div>

                                    <div class="form-group">
                                        <input class="btn btn-primary" type="submit" value="Ingresar" />
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                    <div class="col-md-4"></div>
                </div>
            </main>
        </div>
    </div>
</body>

</html>
