<div id="payrollSection">
    <div class="container-fluid">
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div id="reportrange" class="pull-right" data-bind="daterangepicker: submitRange" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; border-radius: 4px; border-width: 0 1px 4px;">
                        <i class="glyphicon glyphicon-calendar fa fa-calendar"></i>&nbsp;
                        <span></span> <b class="caret"></b>
                    </div>
                </div>
            </div>
        </div>

        <div class="row" data-bind="visible: payrollVisible">
            <div class="panel panel-default">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Asociado</th>
                                <th colspan="2">Llamadas</th>
                                <th colspan="2">Extras</th>
                                <th colspan="2">Penalizaciones</th>
                                <th>Negativos</th>
                                <th>Ahorro mensual</th>
                                <th>Ahorro total</th>
                                <th>Salario</th>
                                <th>Salario Neto</th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: rows">
                            <tr>
                                <td data-bind="text: employee"></td>
                                <td data-bind="text: calls.count"></td>
                                <td data-bind="text: calls.total"></td>
                                <td data-bind="text: extras.count"></td>
                                <td data-bind="text: extras.total"></td>
                                <td data-bind="text: penalties.count"></td>
                                <td data-bind="text: penalties.total"></td>
                                <td data-bind="text: negativeAmount"></td>
                                <td data-bind="text: saving.monthlyAmount"></td>
                                <td data-bind="text: saving.total"></td>
                                <td data-bind="text: salary"></td>
                                <td data-bind="text: netSalary"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
