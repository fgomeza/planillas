<div id="debitsSection" class="container-fluid">
    <div class="row">
        <p>
            <a href="#" data-toggle="modal" data-target="#createUserModal">Crear un débito</a>
        </p>
    </div>
    <div class="row">
        <div class="panel panel-primary" data-bind="visible: activeDebits().length > 0">
            <div class="panel-heading"></div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="usersTable" class="table table-hover">
                        <thead>
                            <tr data-bind="with: labels">
                                <th data-bind="text: name"></th>
                                <th data-bind="text: username"></th>
                                <th data-bind="text: role"></th>
                                <th data-bind="text: location"></th>
                                <th data-bind="text: email"></th>
                                <th data-bind="text: active"></th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: users">
                            <tr>
                                <td data-bind="text: name"></td>
                                <td data-bind="text: username"></td>
                                <td data-bind="text: role"></td>
                                <td data-bind="text: location"></td>
                                <td data-bind="text: email"></td>
                                <td data-bind="text: active"></td>
                                <td data-bind="visible: !$parent.isEditMode()">
                                    <a href="#" data-bind="click: $parent.edit">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <pre class="well well-sm" data-bind="text: ko.toJSON(users, null, 2)"></pre>
    </div>

    <div class="row">
        <div id="usersEditSection" class="panel panel-primary" data-bind="visible: isEditMode, with: editingObject">
            <div class="panel-heading"></div>
            <div class="panel-body">
                <form id="userEditForm" class="form-horizontal container-fluid">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="userEditFormName" class="col-sm-4 control-label" data-bind="text: $root.labels.name"></label>
                            <div class="col-sm-8">
                                <input id="userEditFormName" type="text" class="form-control" data-bind="value: name" />
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="userEditFormAccount" class="col-sm-4 control-label" data-bind="text: $root.labels.username"></label>
                            <div class="col-sm-8">
                                <input id="userEditFormAccount" type="text" class="form-control" data-bind="value: username" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="userEditFormSalary" class="col-sm-4 control-label" data-bind="text: $root.labels.email"></label>
                            <div class="col-sm-8">
                                <input id="userEditFormSalary" type="text" class="form-control" data-bind="value: email" />
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="userEditFormSalary" class="col-sm-4 control-label" data-bind="text: $root.labels.location"></label>
                            <div class="col-sm-8">
                                <input id="userEditFormSalary" type="text" class="form-control" data-bind="value: location" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="userEditFormSalary" class="col-sm-4 control-label" data-bind="text: $root.labels.role"></label>
                            <div class="col-sm-8">
                                <input id="userEditFormSalary" type="text" class="form-control" data-bind="value: role" />
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="userEditFormSalary" class="col-sm-4 control-label" data-bind="text: $root.labels.active"></label>
                            <div class="col-sm-8">
                                <input id="userEditFormSalary" type="text" class="form-control" data-bind="value: active" />
                            </div>
                        </div>
                    </div>
                    <div id="saveCancelButtonsRegion" class="row">
                        <div class="pull-left">
                            <button type="button" class="btn btn-danger" data-bind="click: $root.delete">Eliminar</button>
                        </div>
                        <div class="pull-right">
                            <button type="button" class="btn btn-default" data-bind="click: $root.cancel">Cancelar</button>
                            <button type="submit" class="btn btn-success" data-bind="click: $root.save">Guardar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!--layout background #e7ebee-->
        <div id="createUserModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                    </div>
                    <div class="modal-body">
                        <form id="userEditForm" class="form-horizontal container-fluid">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="userEditFormId" class="col-sm-4 control-label" data-bind="text: $root.labels.id"></label>
                                    <div class="col-sm-8">
                                        <input id="userEditFormId" type="text" class="form-control" name="id" readonly />
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="userEditFormName" class="col-sm-4 control-label" data-bind="text: $root.labels.name"></label>
                                    <div class="col-sm-8">
                                        <input id="userEditFormName" type="text" class="form-control" name="name" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="userEditFormAccount" class="col-sm-4 control-label" data-bind="text: $root.labels.username"></label>
                                    <div class="col-sm-8">
                                        <input id="userEditFormAccount" type="text" class="form-control" name="username" />
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="userEditFormCmsText" class="col-sm-4 control-label" data-bind="text: $root.labels.password"></label>
                                    <div class="col-sm-8">
                                        <input id="userEditFormCmsText" type="text" class="form-control" name="password" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="userEditFormSalary" class="col-sm-4 control-label" data-bind="text: $root.labels.role"></label>
                                    <div class="col-sm-8">
                                        <input id="userEditFormSalary" type="text" class="form-control" name="role" />
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="userEditFormSalary" class="col-sm-4 control-label" data-bind="text: $root.labels.location"></label>
                                    <div class="col-sm-8">
                                        <input id="userEditFormSalary" type="text" class="form-control" namheight="location" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="userEditFormSalary" class="col-sm-4 control-label" data-bind="text: $root.labels.email"></label>
                                    <div class="col-sm-8">
                                        <input id="userEditFormSalary" type="text" class="form-control" namheight="email" />
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="userEditFormSalary" class="col-sm-4 control-label" data-bind="text: $root.labels.active"></label>
                                    <div class="col-sm-8">
                                        <input id="userEditFormSalary" type="text" class="form-control" name="active" />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>

<script>
    require(['knockout', 'app/debitsViewModel'], function (ko, viewModel) {
        var element = document.getElementById('debitsSection');
        ko.applyBindings(new viewModel(), element);
    });
</script>
