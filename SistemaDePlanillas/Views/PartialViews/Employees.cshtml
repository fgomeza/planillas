<div id="employeesSection" class="container-fluid">
    <div class="row">
        <p>
            <a href="/#/modal/?window=CreateEmployee">Agregar empleado</a>
        </p>
        <table id="employeesTable" class="table" data-bind="visible: employees().length > 0">
            <thead>
                <tr data-bind="with: labels">
                    <th data-bind="text: id"></th>
                    <th data-bind="text: idCard"></th>
                    <th data-bind="text: name"></th>
                    <th data-bind="text: location"></th>
                    <th data-bind="text: account"></th>
                    <th data-bind="text: cms"></th>
                    <th data-bind="text: cmsText"></th>
                    <th data-bind="text: calls"></th>
                    <th data-bind="text: salary"></th>
                </tr>
            </thead>
            <tbody data-bind="foreach: employees">
                <tr>
                    <td data-bind="text: id"></td>
                    <td data-bind="text: idCard"></td>
                    <td data-bind="text: name"></td>
                    <td data-bind="text: location"></td>
                    <td data-bind="text: account"></td>
                    <td data-bind="text: cms"></td>
                    <td data-bind="text: cmsText"></td>
                    <td data-bind="text: calls"></td>
                    <td data-bind="text: salary"></td>
                    <td data-bind="visible: !$parent.isEditMode()">
                        <a href="#" data-bind="click: $parent.edit">Edit</a>
                    </td>
                </tr>
            </tbody>

        </table>

        <div id="editSection" class="well well-lg" data-bind="visible: isEditMode, with: editingObject">
            <form class="form-horizontal container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="employeeEditFormId" class="col-sm-4 control-label" data-bind="text: $root.labels.id"></label>
                            <div class="col-sm-8">
                                <input id="employeeEditFormId" type="text" class="form-control" data-bind="value: id" readonly />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="employeeEditFormName" class="col-sm-4 control-label" data-bind="text: $root.labels.name"></label>
                            <div class="col-sm-8">
                                <input id="employeeEditFormName" type="text" class="form-control" data-bind="value: name" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="employeeEditFormAccount" class="col-sm-4 control-label" data-bind="text: $root.labels.account"></label>
                            <div class="col-sm-8">
                                <input id="employeeEditFormAccount" type="text" class="form-control" data-bind="value: account" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="employeeEditFormCmsText" class="col-sm-4 control-label" data-bind="text: $root.labels.cmsText"></label>
                            <div class="col-sm-8">
                                <input id="employeeEditFormCmsText" type="text" class="form-control" data-bind="value: cmsText" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="employeeEditFormSalary" class="col-sm-4 control-label" data-bind="text: $root.labels.salary"></label>
                            <div class="col-sm-8">
                                <input id="employeeEditFormSalary" type="text" class="form-control" data-bind="value: salary" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="employeeEditFormSalary" class="col-sm-4 control-label" data-bind="text: $root.labels.idCard"></label>
                            <div class="col-sm-8">
                                <input id="employeeEditFormSalary" type="text" class="form-control" data-bind="value: idCard" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="employeeEditFormSalary" class="col-sm-4 control-label" data-bind="text: $root.labels.location"></label>
                            <div class="col-sm-8">
                                <input id="employeeEditFormSalary" type="text" class="form-control" data-bind="value: location" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="employeeEditFormSalary" class="col-sm-4 control-label" data-bind="text: $root.labels.cms"></label>
                            <div class="col-sm-8">
                                <input id="employeeEditFormSalary" type="text" class="form-control" data-bind="value: cms" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="employeeEditFormSalary" class="col-sm-4 control-label" data-bind="text: $root.labels.calls"></label>
                            <div class="col-sm-8">
                                <input id="employeeEditFormSalary" type="text" class="form-control" data-bind="value: calls" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="pull-left">
                        <button type="button" class="btn btn-danger" data-bind="click: $root.delete">Eliminar</button>
                    </div>
                    <div class="pull-right">
                        <button type="button" class="btn btn-default" data-bind="click: $root.cancel">Cancelar</button>
                        <button type="submit" class="btn btn-success" data-bind="click: $root.save">Guardar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    require(['knockout', 'app/employeesViewModel'], function (ko, viewModel) {
        var element = document.getElementById('employeesSection');
        ko.applyBindings(new viewModel(), element);
    });
</script>