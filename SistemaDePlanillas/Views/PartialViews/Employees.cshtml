<div id="employeesSection" class="container-fluid">
    <div class="row">
        <p>
            <a href="#" data-toggle="modal" data-target="#createEmployeeModal" data-bind="text: strings.createEmployeeLink"></a>
        </p>
        <div class="panel panel-primary">
            <div class="panel-heading"></div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="employeesTable" class="table table-hover" data-bind="visible: activeEmployees().length > 0">
                        <thead>
                            <tr data-bind="with: strings">
                                <th data-bind="text: id"></th>
                                <th data-bind="text: idCard"></th>
                                <th data-bind="text: name"></th>
                                <th data-bind="text: location"></th>
                                <th data-bind="text: account"></th>
                                <th data-bind="text: cms"></th>
                                <th data-bind="text: cmsText"></th>
                                <th data-bind="text: calls"></th>
                                <th data-bind="text: active"></th>
                                <th data-bind="text: salary"></th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: employees">
                            <tr>
                                <td data-bind="text: id"></td>
                                <td data-bind="text: idCard"></td>
                                <td data-bind="text: name"></td>
                                <td data-bind="text: location"></td>
                                <td data-bind="text: account"></td>
                                <td data-bind="text: cms"></td>
                                <td data-bind="text: cmsText"></td>
                                <td data-bind="text: calls"></td>
                                <th data-bind="text: active"></th>
                                <td data-bind="text: salary"></td>
                                <td data-bind="visible: !$parent.isEditMode()">
                                    <a href="#" data-bind="click: $parent.edit">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div id="employeesEditSection" class="panel panel-primary" data-bind="visible: isEditMode, with: editingObject" style="display:none">
            <div class="panel-heading"></div>
            <div class="panel-body">
                <form id="employeeEditForm" class="form-horizontal container-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="employeeEditFormName" class="col-sm-4 control-label" data-bind="text: $root.strings.name"></label>
                                <div class="col-sm-8">
                                    <input id="employeeEditFormName" type="text" class="form-control" data-bind="value: name" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="employeeEditFormLocation" class="col-sm-4 control-label" data-bind="text: $root.strings.location"></label>
                                <div class="col-sm-8">
                                    <input id="employeeEditFormLocation" type="text" class="form-control" data-bind="value: location" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="employeeEditFormIdCard" class="col-sm-4 control-label" data-bind="text: $root.strings.idCard"></label>
                                <div class="col-sm-8">
                                    <input id="employeeEditFormIdCard" type="text" class="form-control" data-bind="value: idCard" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="employeeEditFormAccount" class="col-sm-4 control-label" data-bind="text: $root.strings.account"></label>
                                <div class="col-sm-8">
                                    <input id="employeeEditFormAccount" type="text" class="form-control" data-bind="value: account" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="employeeEditFormCMS" class="col-sm-4 control-label" data-bind="text: $root.strings.cms"></label>
                                <div class="col-sm-8">
                                    <input id="employeeEditFormCMS" type="text" class="form-control" data-bind="value: cms" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="employeeEditFormCmsText" class="col-sm-4 control-label" data-bind="text: $root.strings.cmsText"></label>
                                <div class="col-sm-8">
                                    <input id="employeeEditFormCmsText" type="text" class="form-control" data-bind="value: cmsText" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="employeeEditFormCalls" class="col-sm-4 control-label" data-bind="text: $root.strings.calls"></label>
                                <div class="col-sm-8">
                                    <input id="employeeEditFormCalls" type="text" class="form-control" data-bind="value: calls" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="employeeEditFormSalary" class="col-sm-4 control-label" data-bind="text: $root.strings.salary"></label>
                                <div class="col-sm-8">
                                    <input id="employeeEditFormSalary" type="text" class="form-control" data-bind="value: salary" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="employeeEditFormSalary" class="col-sm-4 control-label" data-bind="text: $root.strings.active"></label>
                                <div class="col-sm-8">
                                    <input id="employeeEditFormSalary" type="text" class="form-control" data-bind="value: active" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="saveCancelButtonsRegion" class="row">
                        <div class="pull-left">
                            <button type="button" class="btn btn-danger" data-bind="click: $root.delete">Eliminar</button>
                        </div>
                        <div class="pull-right">
                            <button type="button" class="btn btn-default" data-bind="click: $root.cancel">Cancelar</button>
                            <button type="submit" class="btn btn-success" data-bind="click: $root.save">Guardar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div id="createEmployeeModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel" data-bind="text: strings.createEmployeeModalTitle"></h4>
                    </div>
                    <div class="modal-body">
                        <form id="createEmployeeForm" class="form-horizontal container-fluid">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="employeeEditFormName" class="col-sm-4 control-label" data-bind="text: $root.strings.name"></label>
                                    <div class="col-sm-8">
                                        <input id="employeeEditFormName" type="text" class="form-control" name="name" />
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="employeeEditFormLocation" class="col-sm-4 control-label" data-bind="text: $root.strings.location"></label>
                                    <div class="col-sm-8">
                                        <input id="employeeEditFormLocation" type="text" class="form-control" name="location" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="employeeEditFormIdCard" class="col-sm-4 control-label" data-bind="text: $root.strings.idCard"></label>
                                    <div class="col-sm-8">
                                        <input id="employeeEditFormIdCard" type="text" class="form-control" name="idCard" />
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="employeeEditFormAccount" class="col-sm-4 control-label" data-bind="text: $root.strings.account"></label>
                                    <div class="col-sm-8">
                                        <input id="employeeEditFormAccount" type="text" class="form-control" name="account" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="employeeEditFormCMS" class="col-sm-4 control-label" data-bind="text: $root.strings.cms"></label>
                                    <div class="col-sm-8">
                                        <input id="employeeEditFormCMS" type="text" class="form-control" name="cms" />
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="employeeEditFormCmsText" class="col-sm-4 control-label" data-bind="text: $root.strings.cmsText"></label>
                                    <div class="col-sm-8">
                                        <input id="employeeEditFormCmsText" type="text" class="form-control" name="cmsText" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="employeeEditFormSalary" class="col-sm-4 control-label" data-bind="text: $root.strings.salary"></label>
                                    <div class="col-sm-8">
                                        <input id="employeeEditFormSalary" type="text" class="form-control" name="salary" />
                                    </div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="employeeEditFormActive" class="col-sm-4 control-label" data-bind="text: $root.strings.active"></label>
                                    <div class="col-sm-8">
                                        <input id="employeeEditFormActive" type="text" class="form-control" name="active" />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    require(['knockout', 'viewModels/employees'], function (ko, viewModel) {
        var element = document.getElementById('employeesSection');
        ko.applyBindings(new viewModel(), element);
    });

    require(['viewModels/title'], function (title) {
        title.partialViewTitle('Asociados');
    });
</script>