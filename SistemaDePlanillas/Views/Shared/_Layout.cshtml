@using SistemaDePlanillas.Models

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title data-bind="text: applicationName"></title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    @Styles.Render("~/bundles/styles")

    @Scripts.Render("~/Scripts/require-config.js")
    @Scripts.Render("~/Scripts/lib/require.js")
</head>

<body>

    @if (Request.IsAuthenticated)
    {
        var model = (IEnumerable<ApplicationSubMenu>) ViewBag.NavigationMenuModel;
        Html.RenderPartial("Sidebar", model);
        Html.RenderPartial("TopBanner");
    }

    <div class="body-content">

        <div class="alert alert-danger alert-dismissible fade in" style="display:none;">
            <button type="button" class="close" data-dismiss="alert" aria-label="close">&times;</button>
            <strong>@ViewBag.Error</strong>
        </div>

        <main id="page">
            @RenderBody()
        </main>

        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
