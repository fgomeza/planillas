@using SistemaDePlanillas.Models.ViewModels

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    @Styles.Render("~/bundles/styles/common")
    @Styles.Render("~/bundles/styles/partials")
    @Scripts.Render("~/bundles/js/jquery")
</head>

<body>

    @if (Request.IsAuthenticated)
    {
        Html.RenderPartial("Sidebar",  (SidebarViewModel)ViewBag.SidebarViewModel);
        Html.RenderPartial("TopBanner", (SidebarViewModel)ViewBag.SidebarViewModel);
    }

    <div class="body-content">

        <div class="alert alert-danger alert-dismissible fade in" style="display:none;">
            <button type="button" class="close" data-dismiss="alert" aria-label="close">&times;</button>
            <strong>@ViewBag.Error</strong>
        </div>

        <main id="page">
            @RenderBody()

            @RenderSection("scripts", required: false)
        </main>

        @Scripts.Render("~/bundles/js/scripts")
        @Scripts.Render("~/bundles/js/bootstrap")
        @Scripts.Render("~/bundles/js/partials")
    </div>
</body>

</html>
